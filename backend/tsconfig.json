{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "types": ["node", "bun-types"],
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  }
}